<Page x:Class="final.View.MakeAdmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:final.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MakeAdmin">

    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Enter the email of the user to make admin:" FontSize="20" Margin="0,0,0,10" Foreground="White"/>

            <!-- TextBox to enter the email -->
            <TextBox x:Name="EmailTextBox" Text="Enter user email" Margin="0,0,0,10"/>

            <!-- Button to make the user admin -->
            <Button Content="Make Admin" Click="MakeAdminButton_Click" Width="150" HorizontalAlignment="Center"/>
            <Button Content="Go back to the main page" Click="GObacktomain" Width="150" HorizontalAlignment="Center"/>

        </StackPanel>
    </Grid>
</Page>
