<Page x:Class="final.View.Admin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:final.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Admin"
      Background="Gray">

    <Grid>
        <TextBlock Text="What would you like to do?" FontSize="40" FontStyle="Normal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,19,0,0" Foreground="White"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
            <Button Content="Add Question" Click="AddQuestionClick" Name="AddQuestionButton" Width="200" Height="50" FontSize="20" Background="Black" Foreground="White" Margin="10"/>
            <Button Content="Make a User Admin" Click="MakeUserAdminClick" Name="MakeUserAdminButton" Width="200" Height="50" FontSize="20" Background="Black" Foreground="White" Margin="10"/>
            <Button Content="Play Game" Click="PlayGameClick" Name="PlayGame" Width="200" Height="50" FontSize="20" Background="Black" Foreground="White" Margin="10"/>

        </StackPanel>
    </Grid>
</Page>
